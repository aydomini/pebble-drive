{
  "name": "pebbledrive-backend",
  "version": "1.3.2",
  "description": "PebbleDrive 后端API - Cloudflare Workers",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "build": "npm run build:frontend",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "deploy": "wrangler deploy",
    "deploy:all": "npm run build && wrangler deploy",
    "tail": "wrangler tail",
    "db:init": "wrangler d1 execute pebble-drive-db --file=./migrations/schema.sql",
    "db:migrate": "wrangler d1 migrations apply pebble-drive-db --remote",
    "db:local": "wrangler d1 execute pebble-drive-db --local --file=./migrations/schema.sql"
  },
  "keywords": [
    "cloudflare-workers",
    "api",
    "serverless"
  ],
  "devDependencies": {
    "wrangler": "^4.0.0"
  }
}
